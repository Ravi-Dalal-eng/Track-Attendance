<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment"
    android:background="@color/background"
    tools:context=".fragments.HomeFragment">
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:id="@+id/topline"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/show_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topline"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="22sp"

        />
    <com.google.android.material.button.MaterialButton
        android:text="@string/add_subject"
        android:id="@+id/add_subject"
        app:cornerRadius="12dp"
        app:strokeColor="@color/white"
        app:rippleColor="@color/ripple_color"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_date"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/subjects"
        app:layout_constraintTop_toBottomOf="@+id/add_subject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="@drawable/home_fragment_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>