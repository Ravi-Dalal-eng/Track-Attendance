<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PastSubjectAttendance">

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/subject_recycler_view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="5dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/subject_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_recycler_view"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="33sp"
        android:gravity="center"
        android:padding="13dp"
        />
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/student_recycler_view"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="5dp"
    app:layout_constraintTop_toBottomOf="@+id/subject_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>